<templateSet group="TDD">
  <template name="should" value="@Test public void should_$NAME$() {&#10;    /* GIVEN */ $END$&#10;    /* WHEN  */&#10;    /* THEN  */    &#10;}" description="Create a test case for TDD" toReformat="true" toShortenFQNames="true">
    <variable name="NAME" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="JAVA_CODE" value="true" />
    </context>
  </template>
  <template name="that" value="assertThat($VALUE$).$END$" description="assertThat Shortcut" toReformat="true" toShortenFQNames="true">
    <variable name="VALUE" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="JAVA_CODE" value="true" />
    </context>
  </template>
  <template name="before" value="@Before&#10;public void beforeEach() {&#10;    $END$   &#10;}" description="BeforeEach in jUnit env" toReformat="true" toShortenFQNames="true">
    <context>
      <option name="JAVA_CODE" value="true" />
    </context>
  </template>
  <template name="after" value="@After&#10;public void beforeEach() {&#10;    $END$   &#10;}" description="AfterEach in jUnit env" toReformat="true" toShortenFQNames="true">
    <context>
      <option name="JAVA_CODE" value="true" />
    </context>
  </template>
</templateSet>